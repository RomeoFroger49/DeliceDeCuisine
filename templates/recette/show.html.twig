            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recette.createdAt ? recette.createdAt|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ recette.file }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ recette.prix }}</td>
            </tr>
        </tbody>
    </table>

