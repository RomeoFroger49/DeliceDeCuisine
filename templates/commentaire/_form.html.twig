
{{ form_start(form) }}
    {{ form_row(form.contenue,  {'name': 'Contenue : '}) }}

    {{ form_widget(form.note, {'attr': {'class': 'hidden'}}) }}


    <div id="form" class="flex items-center justify-between px-3">
        <div class="flex items-center">
        <p class="mr-1.5">Note :</p>
        {% for i in 1..5 %}
        <i id="{{ i }}"  onclick="getValue({{ i }}), changeStar({{ i }})"  class="far fa-star text-red-500 "></i>
        <i id="{{ i }}-h"  onclick="getValue({{ i }}),changeStar({{ i }})"  hidden="hidden"  class="fas fa-star text-red-500 m-0"></i>
        {% endfor %}
        </div>


        {% if app.user is not null %}
            <button class="border border-black rounded" type="submit" >{{ button_label|default('Publier') }}</button>
        {% else %}
            <a class="btn" type="button" href="{{ path('app_login') }}" >Publier</a>
        {% endif %}
    </div>


{{ form_end(form) }}

{% block javascripts %}
    <script src="{{ asset('note.js') }}"></script>
{% endblock %}