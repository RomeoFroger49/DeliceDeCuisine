{% extends 'base.html.twig' %}




{% block body %}
    <style>
        #searchInput + #list{
            display: none;
        }
        #searchInput:focus + #list, #searchInput + #list:hover{
            display: block;
        }
    </style>
<header class="border-b border-black">
    <div class="w-full flex justify-between py-3 ">
        <div class="w-1/3 text-gray-500 px-3">
            <a class="px-3 text-red-500" href="{{ path('app_home') }}" >DÃ©lice de Cuisine</a>
        </div>
        <div class="relative bg-white  border-2 border-white rounded" id="foodSearch">
                <label class=" p-1 font-light">
                    <input class="" type="text" id="searchInput" name="Research" oninput="filterList()"  placeholder="Rechercher">
                    <ul class="absolute bg-white w-full" id="list">
                        {% for recipe in recettesNav|slice(0,8) %}
                            <a href="{{ path('app_recette_show', {'id': recipe.id}) }}">
                            <li class="border-b-2 border-gray-200">
                                <p>{{ recipe.name }}</p>
                            </li>
                            </a>
                        {% endfor %}
                    </ul>
                </label>
                <button type="button" onclick="window.location.assign('{{ path('app_recette_index') }}') " class="px-1"><i class="fa fa-magnifying-glass"></i></button>
        </div>
        <div class="w-1/3 flex justify-end text-red-500 px-3" >
            {% if not is_granted('ROLE_USER')%}
                <a class="px-3" href="{{ path('app_login') }}">Connexion</a>
                <a class="px-3" href="{{ path('app_register') }}">Inscription</a>
            {% elseif is_granted('ROLE_ADMIN') %}
                <a class="px-3" href="{{ path('app_user_edit', {'id': user.userIdentifier}) }}">{{ user }}</a>
                <a class="px-3" href="{{ path('admin') }}">Admin</a>
                <a class="px-3" href="{{ path('app_logout') }}">Deconnexion</a>
            {% else %}
                <a class="px-3" href="{{ path('app_user_edit', {'id': user.userIdentifier}) }}">{{ user }}</a>
                <a class="px-3" href="{{ path('app_logout') }}">Deconnexion</a>
            {% endif %}
        </div>
    </div>
</header>
    {% block javascripts %}
        <script src="{{ asset('Filter.js') }}"></script>
    {% endblock %}
{% endblock %}
