{% extends 'home/index.html.twig' %}




{% block body %}
<header class="">
    <div class="w-full flex justify-between py-3 ">
        <div class="w-1/3 text-gray-500 px-3">
            <a class="px-3" href="{{ path('app_home') }}">DÃ©lice de Cuisine</a>
        </div>
        <div class="relative bg-white  border-2 border-white rounded">
            <form action="" method="GET">
                <label class=" p-1 font-light">
                    <input type="text" id="searchInput" oninput="filterList()" onfocus="toggleListVisibility(true)"  placeholder="Rechercher une recette">
                    <ul class="absolute hidden bg-white w-full" id="list">
                        {% for recipe in recettes %}
                            <li class="border-b-2 border-gray-200">
                                <a href="{{ path('app_recette_show', {'id': recipe.id}) }}">{{ recipe.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </label>
                <button type="submit" class="px-1"><i class="fa fa-magnifying-glass"></i></button>
            </form>
        </div>
        <div class="w-1/3 flex justify-end text-gray-500 px-3">
            {% if not is_granted('ROLE_USER')%}
                <a class="px-3" href="{{ path('app_login') }}">Connexion</a>
                <a class="px-3" href="{{ path('app_register') }}">Register</a>
            {% else %}
                <a class="px-3" href="{{ path('app_user_show', {'id': user.userIdentifier}) }}">{{ user }}</a>
                <a class="px-3" href="{{ path('admin') }}">Admin</a>
                <a class="px-3" href="{{ path('app_logout') }}">Deconnexion</a>
            {% endif %}
        </div>
    </div>
</header>
    {% block javascripts %}
        <script src="{{ asset('Filter.js') }}"></script>
    {% endblock %}
{% endblock %}
